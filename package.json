{
  "name": "globetrotter",
  "version": "1.0.0",
  "description": "Personalized Travel Planning Platform",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "npm --prefix frontend run build",
    "install:client": "npm --prefix frontend install",
    "heroku-postbuild": "npm run install:client && npm run build:client"
  },
  "keywords": ["travel", "planning", "itinerary", "tourism"],
  "author": "GlobeTrotter Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^9.1.2"
  }
}
